{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": [
      "es2022"
    ],
  },
  "include": [
    "src/**/*.ts"
  ]
}